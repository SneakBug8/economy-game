<h1>Статистика инфляции</h1>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.min.js" type="text/javascript"></script>

<h2>Относительная</h2>
<canvas id="myChart" width="400" height="200"></canvas>
<script>
var ctx = document.getElementById('myChart');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: {{{labels}}},
        datasets: [
        {
            label: "Inflation (relative)",
            data: {{{relative}}},
            borderColor: "red"
        }
        ]
    }
});
</script>

<h2>Абсолютная</h2>
<canvas id="absChart" width="400" height="200"></canvas>
<script>
var ctx = document.getElementById('absChart');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: {{{labels}}},
        datasets: [
        {
            label: "Inflation (absolute)",
            data: {{{data}}},
            borderColor: "orange"
        },
        ]
    }
});
</script>